---
import { SKILLS } from "../../consts/skills";
import SkillSlider from "./SkillSlider.astro";
---

<section id="skills" class="w-[80%] mx-auto flex flex-col gap-8 pb-10">
  <div class="space-y-2">
    <span class="uppercase text-[#03a6f1] font-medium text-lg">HABILIDADES</span>
    <h3 class="text-4xl font-semibold">Mis Habilidades</h3>
  </div>
  <div class="w-full flex items-center justify-center flex-col gap-4">
    <SkillSlider skills={SKILLS} />
    <SkillSlider skills={SKILLS} reverse={true} />
  </div>
  <div class="h-[2px] w-full bg-[#1b1b1b]" />
</section>
