---
import { SkillsBack, SkillsFront } from "../../consts/skills";
import SkillSlider from "./SkillSlider.astro";
import { SkillsText, SkillsTextEN } from "../../consts/text";

const currentPath = Astro.url.pathname;
const TEXTS = currentPath === "/en" ? SkillsTextEN : SkillsText;
---

<section id="skills" class="w-[80%] mx-auto flex flex-col gap-8 pb-10">
  <div class="space-y-2">
    <span class="uppercase text-[#03a6f1] font-medium text-md sm:text-lg">{TEXTS.title}</span>
    <h3 class="text-xl sm:text-2xl tablet:text-4xl font-semibold pb-3 tablet:pb-6">{TEXTS.subtitle}</h3>
  </div>
  <div class="w-full flex items-center justify-center flex-col gap-4">
    <SkillSlider skills={SkillsFront} />
    <SkillSlider skills={SkillsBack} reverse={true} />
  </div>
  <div class="h-[2px] w-full bg-[#1b1b1b]" />
</section>
