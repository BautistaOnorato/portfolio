---
import { PROJECTS } from "../../consts/projects";
import ProjectCard from "./ProjectCard.astro";
import { ProjectsText, ProjectsTextEN } from "../../consts/text";

const currentPath = Astro.url.pathname;
const TEXTS = currentPath === "/en" ? ProjectsTextEN : ProjectsText;
---

<section id="projects" class="w-[80%] py-10 mx-auto flex flex-col gap-0 sm:gap-4">
  <div class="space-y-2">
    <span class="uppercase text-[#03a6f1] font-medium text-md sm:text-lg">{TEXTS.title}</span>
    <h3 class="text-2xl sm:text-4xl font-semibold">{TEXTS.subtitle}</h3>
  </div>
  <div class="projects-list">
    {
      PROJECTS.map((project, i) => (     
        <ProjectCard project={project} reverse={i % 2 !== 0} />
        <div class="h-[2px] w-full bg-[#1b1b1b]" />
      ))
    }
  </div>
</section>


