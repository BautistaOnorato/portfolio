---
import { AboutText, AboutTextEN } from "../consts/text"

const currentPath = Astro.url.pathname;
const TEXTS = currentPath === "/en" ? AboutTextEN : AboutText;
---
<section id="about-me" class="w-[80%] pb-10 mx-auto flex flex-col gap-8">
  <div
    class="flex tablet:flex-row flex-col items-center justify-between gap-8 tablet:gap-20"
  >
    <div class="space-y-2 flex-1">
      <span class="uppercase text-[#03a6f1] font-medium text-md sm:text-lg"
        >{TEXTS.title}</span
      >
      <h3
        class="text-xl sm:text-2xl tablet:text-4xl font-semibold pb-3 tablet:pb-6"
      >
        Bautista Onorato
      </h3>
      <div class="flex flex-col gap-4 opacity-75">
        <p>
          {TEXTS.desc1}
        </p>
        <p>
          {TEXTS.desc2}
        </p>
      </div>
    </div>
    <div class="p-4 bg-[#121212] rounded-md">
      <img
        class="object-cover aspect-square rounded-md max-h-80 tablet:h-72"
        src="/img/me.jpeg"
        alt="about me image"
      />
    </div>
  </div>
  <div class="h-[2px] w-full bg-[#1b1b1b]"></div>
</section>
