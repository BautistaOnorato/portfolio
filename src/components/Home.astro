---
import ArrowRightIcon from "../icons/ArrowRightIcon.astro";
import ArrowDownIcon from "../icons/ArrowDownIcon.astro";
---

<section id="home" class="bg-[#121212] text-white pt-10">
  <div
    class="w-[80%] py-24 text-center flex items-center justify-center flex-col mx-auto gap-12"
  >
    <div class="space-y-4">
      <h2 class="text-3xl sm:text-5xl font-bold text-[#03a7f1]">
        Desarrollador web
      </h2>
      <h1 class="text-4xl sm:text-7xl font-bold">Bautista Onorato</h1>
    </div>
    <div class="flex items-center justify-center gap-4 flex-wrap">
      <a
        href="https://www.linkedin.com/in/bautista-onorato-940566272/"
        target="_blank"
        class="border border-[#9e9e9e] px-4 py-2 rounded-md flex items-center justify-center gap-2 w-32 pl-5 hover:bg-[#242424] transition-all duration-200"
        >Linkedin <ArrowRightIcon size={24} /></a
      >
      <a
        href="https://github.com/BautistaOnorato"
        target="_blank"
        class="border border-[#9e9e9e] px-4 py-2 rounded-md flex items-center justify-center gap-2 w-32 pl-5 hover:bg-[#242424] transition-all duration-200"
        >GitHub <ArrowRightIcon size={24} /></a
      >
      <a
        href="/CV_BautistaOnorato.pdf"
        download="CV_BautistaOnorato"
        class="px-4 py-2 rounded-md flex items-center justify-center gap-2 border border-transparent bg-[#03a6f1b0] cursor-pointer hover:bg-[#03a6f186] transition-all duration-200"
        >Descargar CV <ArrowDownIcon size={24} /></a
      >
    </div>
  </div>
</section>
