---
import Header from "../components/Header.astro";
import "@fontsource-variable/jost";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />
    <link rel="manifest" href="/site.webmanifest" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <Header />
    <slot />
  </body>
</html>

<style is:global>
  html {
    font-family: "Jost Variable", sans-serif;
    scroll-behavior: smooth;
  }

  .view:hover {
    --tw-shadow: 0 0 2px #fff, inset 0 0 2px #fff, 0 0 10px #03a6f1,
      0 0 10px #03a6f1, 0 0 10px #03a6f1;
    --tw-shadow-colored: 0 0 2px var(--tw-shadow-color),
      inset 0 0 2px var(--tw-shadow-color), 0 0 10px var(--tw-shadow-color),
      0 0 10px var(--tw-shadow-color), 0 0 10px var(--tw-shadow-color);
    box-shadow: var(--tw-ring-offset-shadow, 0 0 #0000),
      var(--tw-ring-shadow, 0 0 #0000), var(--tw-shadow);
  }

  .active-view {
    --tw-shadow: 0 0 2px #fff, inset 0 0 2px #fff, 0 0 10px #03a6f1,
      0 0 10px #03a6f1, 0 0 10px #03a6f1;
    --tw-shadow-colored: 0 0 2px var(--tw-shadow-color),
      inset 0 0 2px var(--tw-shadow-color), 0 0 10px var(--tw-shadow-color),
      0 0 10px var(--tw-shadow-color), 0 0 10px var(--tw-shadow-color);
    box-shadow: var(--tw-ring-offset-shadow, 0 0 #0000),
      var(--tw-ring-shadow, 0 0 #0000), var(--tw-shadow);
  }
</style>
